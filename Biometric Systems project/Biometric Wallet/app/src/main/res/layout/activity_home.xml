<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:text="Benvenuto"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:text="Nome"
            android:id="@+id/home_name"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="20dp"
            android:text="I tuoi address e i tuoi bilanci">
            ></TextView>
        <ListView
            android:id="@+id/home_Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"></ListView>


        <Button
            android:id="@+id/sendMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Invia delle valute"
            tools:layout_editor_absoluteX="84dp"
            tools:layout_editor_absoluteY="399dp"></Button>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>