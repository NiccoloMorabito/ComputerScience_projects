<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registrazione">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:id="@+id/reg_titolo"
            android:text="Inserisci i dati richiesti"
            android:textSize="39dp">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome Utente"
            android:layout_marginTop="60dp"
            android:textSize="20dp"
            android:layout_marginLeft="5dp">
        </TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="21dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="5dp"
            android:id="@+id/registrazione_nome">

        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="5dp"
            android:textSize="20dp">
        </TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="21dp"
            android:layout_marginLeft="2dp"
            android:inputType="textPassword"
            android:layout_marginTop="5dp"
            android:id="@+id/registrazione_password"></EditText>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ATTENZIONE: Prima di procedere fornire i permessi di accesso alla fotocamera"
                android:id="@+id/coso"
                android:layout_margin="5dp"
                >
            </TextView>
           <Button
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="20dp"
               android:text="Procedi all' enrollment"
               android:layout_margin="20dp"
               android:id="@+id/go_enroll"
               android:layout_below="@+id/coso"
               ></Button>
        </RelativeLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>